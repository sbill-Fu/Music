page {
  background-color: #fafafa;
}

.search-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
  height: 60rpx;
  margin-left: 10px;
  margin-top: 10px;
  border-radius: 20rpx;
  background-color: #fff;
}

.placeholder-text {
  font-size: 30rpx;
  color: #666
}

.hot-container {
  margin-top: 20px;
}

.hot-title {
  margin-left: 8px;
  font-size: 30rpx;
  font-weight: bold;
  letter-spacing: 2px;
}

.hot-items {
  margin: 10px 30px 0 10px;
}

.hot-item {
  float: left;
  font-size: 28rpx;
  margin-left: 5px;
  margin-right: 5px;
  border-radius: 12px;
  padding: 4px;
  background-color: #fff;
  margin-bottom: 20px;
}