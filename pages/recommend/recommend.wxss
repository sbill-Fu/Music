.test {
  width:119px;
  height:19px;
  font-size:20px;
  white-space: nowrap;
  /* font-family:PingFang SC; */
  font-weight:400;
  /* color:rgba(255,255,255,1); */
}

.bottom-container {
  margin-bottom: 120rpx;
}

.search-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
  width: 658rpx;
  height: 80rpx;
  border: 1px solid #F3F4F6;
  border-radius: 50rpx;
  background-color: #F3F4F6;
}

.search {
  width: 400rpx;
  text-align: left;
}

.search-img {
  text-align: right;
  width: 307rpx;
}

.place-search {
  font-size: 13px;
}

.recommend-list {
  display: flex;
  flex-direction: column;
}

.rmd-head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 7px;
  margin-bottom: 10px;
}

.rmd-txt {
  width: 200rpx;
  font-size: 30rpx;
  font-weight: bold;
  letter-spacing: 2px;
}

.more {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.more-text {
  font-size: 27rpx;
  color: #666;
  margin-right: 3px;
  letter-spacing: 2px;
}

.right-icon {
  margin-right: 10px;
  width: 20rpx;
  height: 25rpx;
}

.music-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
  background-color: #fff;
}

.music-img {
  width: 120rpx;
  height: 120rpx;
  margin-left: 10px;
  border-radius: 18rpx;
}

