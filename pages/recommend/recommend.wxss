.music-info {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.music-name {
  font-size: 30rpx;
  word-spacing: 3px;
}

.singer {
  font-size: 22rpx;
  color: #666;
  letter-spacing: 1px;
}

.music-right-icon {
  width: 20rpx;
  height: 25rpx;
  position: absolute;
  right: 9px;
}

